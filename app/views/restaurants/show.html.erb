<div class="restaurant_single mt-4 mb-4">
  <h1><%= @restaurant.name %></h1>

  <div class="mt-4">
    <p>Address: <%=@restaurant.address %></p>
    <p>Phone number: <%=@restaurant.phone_number %></p>
    <p>Category: <%=@restaurant.category.capitalize %></p>
  </div>

  <h6><%= link_to "Edit",edit_restaurant_path(@restaurant) %></h6>
  <h6><%= link_to "Back to homepage", restaurants_path %></h6>

  <h2>Customer reviews</h2>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, collection: 1..5 %>
    <%= f.input :content %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
  <ul>
    <% @restaurant.reviews.each do |review|%>
      <div class="mt-2 mb-2">
        <li>Rating: <%= review.rating%></li>
        <li>Content: <%= review.content %></li>
      </div>
    <% end %>
  </ul>
</div>
